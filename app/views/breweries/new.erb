<div class="row">
  <div class="col-12 text-center my-3 pt-3">
    <h3>Sign up</h3>
  </div>
</div>
<!-- ERROR MESSAGE -->
<div class="row">
  <div class="col-12 text-center">
    <% if flash.has?(:notice) && flash[:notice].kind_of?(Array) %>
      <% flash[:notice].each do |message| %>
        <p class="error-msg"><%= message %></p>
      <% end %>
    <% elsif flash.has?(:notice) && flash[:notice].kind_of?(String) %>
      <p class="error-msg"><%= flash[:notice] %></p>
    <% end %>

    <% if logged_in? %>
      <p>You are already signed up & logged in</p>
      <p>Go to <a href="/breweries">Breweries</a></p>
  </div>
</div>

<!-- FORM/INPUT -->
    <% else %>
    <form action="/signup" method="post">
      <div class="form-group row w-50 mx-auto">
        <label for="name" class="col-md-3 col-form-label">Name:</label>
        <div class="col-md-9">
          <input class="form-control" type="text" name="name">
        </div>
      </div>

      <div class="form-group row w-50 mx-auto">
        <label for="email" class="col-md-3 col-form-label">Email:</label>
        <div class="col-md-9">
          <input class="form-control" type="email" name="email">
        </div>
      </div>

      <div class="form-group row w-50 mx-auto">
        <label for="city" class="col-md-3 col-form-label">City:</label>
        <div class="col-md-9">
          <input class="form-control" type="text" name="city">
        </div>
      </div>

      <div class="form-group row w-50 mx-auto">
        <label for="password" class="col-md-3 col-form-label">Password:</label>
        <div class="col-md-9">
          <input class="form-control" type="password" name="password">
        </div>
      </div>
      <input type="submit" value="Sign Up" class="btn-sm my-5">
      </form>

  <!-- REDIRECT TO LOGIN -->
  <div class="row">
    <div class="col-12 text-center">
      <p class="mt-3">Already have an account?</p>
      <a href="/login" class="btn-sm mb-5">Log in</a>
      <% end  %>
    </div>
  </div>
