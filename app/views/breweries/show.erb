<!-- FLASH MESSAGE -->
  <div class="row">
    <div class="col-12">
      <%# Render from log in form %>
      <% if flash.has?(:notice) %>
        <p class="success-msg small-center pt-5"><%= flash[:notice] %></p>
      <% end %>
    </div>
  </div>
  <!-- TITLE -->
  <div class="row">
    <div class="col-12 small-center">
      <h1><%= @brewery.name %></h1>
    </div>
  </div>

  <!-- DESCRIPTION -->
  <div class="row">
    <div class="col-12 small-center">
      <% if @current_user == @brewery %>
        <p>your member ID: <%= @brewery.id %></p>
        <p>your email: <%= @brewery.email %></p>
      <% end %>
      <p>City: <%= @brewery.city %></p>
    </div>
  </div>

  <!-- WHAT'S ON TOP -->
  <div class="row">
    <div class="col-7 brewery-show">
      <h2 class="text-center mb-5">What's on tap at <%= @brewery.name %></h2>
      <% if @brewery.brands.empty? %>
        <p class="text-center"><%= @brewery.name  %> does not have any brands.</p>
        <% else @brewery.brands.each do |brand| %>
          <ul class="brands-wrapper">
            <li class="brands text-center">
                <a href="/brands/<%= brand.id %>"><%= brand.name %></a>
            </li>
          </ul>
        <% end  %>
      <% end  %>
    </div>
  </div>


<% if @current_user == @brewery %>
  <div class="row">
    <div class="col-12 text-center">
      <a href="/brands/new" class="btn-sm my-5">Register your brand</a>
    </div>
  </div>
<% end  %>

<div class="mt-5 small-center">
  <a href="/breweries" class="link">Check All Breweries</a>
</div>
